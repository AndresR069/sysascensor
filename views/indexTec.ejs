  <!---->

  <div class="content">

    <!-- TABLE TAREAS -->
    <table id="table-tareas">
      <tr>
        <td class="title" colspan="7"><img class="icon" src="https://juangallegosn.github.io/images/icon-tareas.svg">
          <h1>Tareas Tecnico</h1>
        </td>
      </tr>
      <tr>
        <th>ID. Tarea</th>
        <th>Fecha</th>
        <th>Cliente-Conjunto</th>
        <th>Estado</th>
        <th>Obeservaciones</th>
        <th>Sector</th>
        <th>Delegado</th>
        <th>Proceso</th>
      </tr>

      <% result.forEach((tarea)=>{ %>
        <tr>
          <td>
            <%= tarea.id_ascensor %>
          </td>
          <td>
            <%= tarea.fecha_asignacion %>
          </td>
          <td>
            <%= tarea.nombre_lugar %>
          </td>
          <td>
            <% if (tarea.nombre_estado=='En espera' ) { %>

              <span class="badge badge-danger">En espera</span>

              <% } %>

                <% if (tarea.nombre_estado=='En curso' ) { %>

                  <span class="badge badge-primary">En curso</span>

                  <% } %>

                    <% if (tarea.nombre_estado=='Finalizado' ) { %>

                      <span class="badge badge-success">Finalizado</span>

                      <% } %>

          </td>
          <td>
            <%= tarea.observacion %>
          </td>
          <td>
            <%= tarea.nombre_sector %>
          </td>
          <td>
            <%= tarea.nombres %>
              <%= tarea.apellidos %>
          </td>
          <td>
            <a href="/hojamanten/<%= tarea.id_ascensor %>" class="edit" data-toggle="modal"><button type="button"
                class="btn btn-success">Ir</button></a>
           
          </td>
        </tr>
        <% }) %>
    </table>
